<Window x:Class="SkillMatchApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkillMatchApplication"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        WindowStyle="SingleBorderWindow"
        Title="SkillMatch" Height="1000" Width="1600">
    
    <Grid x:Name="SkillMatch" Width="1600" Height="1000" Background="#FFEFECE3">
        <Rectangle HorizontalAlignment="Left" Height="100" Margin="-696,126,0,0" Stroke="Black" VerticalAlignment="Top" Width="100"/>
        <Image HorizontalAlignment="Left" Height="990" VerticalAlignment="Top" Width="974" Source="/sm2.png"/>
        <Label Content="WELCOME!" HorizontalAlignment="Left" Margin="1184,225,0,0" VerticalAlignment="Top" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold" FontSize="36" Foreground="#FF183765"/>
        <Label Content="Sign in to your account." HorizontalAlignment="Left" Margin="1178,345,0,0" VerticalAlignment="Top" Foreground="#FF183765" FontFamily="Yu Gothic UI" FontSize="20"/>

        <!-- Email TextBox -->
        <Grid HorizontalAlignment="Left" Margin="1086,401,0,0" Height="49" VerticalAlignment="Top" Width="390">
            <TextBox x:Name="txtEmail" 
                     FontSize="22" 
                     Padding="10,0,0,0" 
                     VerticalContentAlignment="Center" 
                     Background="Transparent" 
                     BorderThickness="0" FontFamily="Yu Gothic UI">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Grid>
                                        <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4"/>
                                        <ScrollViewer x:Name="PART_ContentHost" Margin="5"/>
                                        <TextBlock Text="Type your email here." 
                                                   Foreground="Gray" 
                                                   Margin="10,0,0,0" 
                                                   VerticalAlignment="Center"
                                                   IsHitTestVisible="False">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </Grid>
        
        <!-- Password TextBox -->
        <Grid HorizontalAlignment="Left" Margin="1086,471,0,0" Height="49" VerticalAlignment="Top" Width="390">
            <PasswordBox x:Name="txtPassword"
                 FontSize="22"
                 Padding="10,0,0,0"
                 VerticalContentAlignment="Center"
                 Background="White"
                 BorderBrush="#CCCCCC"
                 BorderThickness="1"
                 Foreground="#FF183765"/>
        </Grid>

        <TextBlock Text="REGISTER"
           FontSize="22"
           FontFamily="Yu Gothic UI Semibold"
           FontWeight="Bold"
           Foreground="#FF183765"
           HorizontalAlignment="Left"
           Margin="1232,727,0,0"
           VerticalAlignment="Top"
           Cursor="Hand"
           MouseLeftButtonUp="Register_Click">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="TextDecorations" Value="Underline"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="#FF0A2657"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <Label x:Name="Forgot" Content="Forgot Password?" HorizontalAlignment="Left" Margin="1325,520,0,0" VerticalAlignment="Top" Foreground="#FF183765" FontSize="18" Height="41" Width="168" FontFamily="Yu Gothic UI"/>
        <Button x:Name="Login" Content="LOGIN" HorizontalAlignment="Left" Margin="1143,587,0,0" VerticalAlignment="Top" FontFamily="Yu Gothic UI Semibold" Foreground="#FF183765" Height="49" Width="275" Background="#FFEFECE3" BorderBrush="#FF183765" FontSize="20"/>
        <Label Content="Not a member yet?" HorizontalAlignment="Left" Margin="1197,690,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Yu Gothic UI" Foreground="#FF183765"/>
    </Grid>
</Window>