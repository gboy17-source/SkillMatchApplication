<Window x:Class="SkillMatchApplication.Windows.MessagesTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkillMatchApplication.Windows"
        mc:Ignorable="d"
        Title="MessagesTestWindow" Height="750" Width="1000"
        Background="#FF0F1E3A">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>

        <!-- Messages area -->
        <ScrollViewer x:Name="messageContainer" Grid.Row="0"
                      VerticalScrollBarVisibility="Auto"
                      Padding="10">
            <StackPanel x:Name="messagesStackPanel"
                        Orientation="Vertical"/>
        </ScrollViewer>

        <!-- Input area -->
        <Border Grid.Row="1" Background="#FF1E3A5F" Margin="20">
            <StackPanel Margin="20">

                <!-- YOU (press Enter) -->
                <TextBox x:Name="txtMyMessage"
                         Height="55"
                         Padding="20,0"
                         FontSize="16"
                         Background="#FF2A4470"
                         Foreground="White"
                         BorderBrush="#FF2A4470"/>

                <!-- OTHER USER -->
                <Grid>
                    <TextBox x:Name="txtOtherMessage"
                             Height="55"
                             Padding="20,0"
                             FontSize="16"
                             Background="#FF2A4470"
                             Foreground="#FFFFD0D0"
                             BorderBrush="#FF2A4470"/>
                    <Button Content="Send as Other User"
                            Width="200"
                            HorizontalAlignment="Right"
                            Background="#FFFF6B6B"
                            Foreground="Black"
                            FontWeight="Bold"
                            Click="btnSendAsOther_Click"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>