<Window x:Class="SkillMatchApplication.Windows.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkillMatchApplication.Windows"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="EditProfileWindow" Height="920" Width="810" WindowStartupLocation="CenterScreen" Icon="/Resources/Logos/Logo.png">
    <Grid x:Name="EditProfile" Background="#FFEFECE3" Margin="0,0,0,-6" Height="920">
        <Grid Background="#FFEFECE3" Width="810" Height="920">
            <Ellipse x:Name="imgProfilePic" HorizontalAlignment="Center" Height="160" Margin="0,30,0,15" Stroke="Black" VerticalAlignment="Top" Width="160" Fill="#FFEAEAEA"/>
            <Button x:Name="btnChangePhoto" Content="Change Photo" HorizontalAlignment="Center" Margin="0,195,0,0" VerticalAlignment="Top" Background="#FF183765" Foreground="#FFEFECE3" FontFamily="Yu Gothic UI" FontWeight="Bold" Width="160" Height="40" FontSize="18" Click="btnChangePhoto_Click"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,260,0,0" TextWrapping="Wrap" Text="Display Name" VerticalAlignment="Top" Foreground="#FF183765" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold" FontSize="18"/>
            <TextBox x:Name="txtDisplayName" HorizontalAlignment="Center" Margin="0,284,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="420" Height="40" TextAlignment="Center" FontFamily="Yu Gothic UI Semibold" FontSize="20"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,351,0,0" TextWrapping="Wrap" Text="I can teach (Separate with comma ',')" VerticalAlignment="Top" Foreground="#FF183765" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold" FontSize="18"/>
            <TextBox x:Name="txtSkillsWant" HorizontalAlignment="Center" Margin="0,505,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="760" Height="94" FontFamily="Yu Gothic UI Semibold" FontSize="16"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,614,0,0" TextWrapping="Wrap" Text="Short bio (optional)" VerticalAlignment="Top" Foreground="#FF183765" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold" RenderTransformOrigin="0.5,4.138" FontSize="18"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,481,0,0" TextWrapping="Wrap" Text="I want to learn (Separate with comma ',')" VerticalAlignment="Top" Foreground="#FF183765" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold" FontSize="18"/>
            <TextBox x:Name="txtSkillsOffer" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="760" Height="94" Margin="0,375,0,0" FontFamily="Yu Gothic UI Semibold" FontSize="16"/>
            <TextBox x:Name="txtBio" HorizontalAlignment="Center" Margin="0,638,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="760" Height="121" FontFamily="Yu Gothic UI Semibold" FontSize="16"/>
            <!-- Save Changes & Cancel Button-->
            <StackPanel Margin="0,784,0,56" HorizontalAlignment="Center" Width="760">
                <Button x:Name="btnSave" Content="Save" Height="40" FontFamily="Yu Gothic UI Semibold" FontSize="22" Background="#FF183765" Foreground="#FFEFECE3" Click="btnSave_Click"/>
                <Button x:Name="btnCancel" Content="Cancel" Width="760" Height="40" FontFamily="Yu Gothic UI Semibold" FontSize="22" Background="{x:Null}" Foreground="#FF1A3865"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
