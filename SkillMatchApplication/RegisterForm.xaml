<Window x:Class="SkillMatchApplication.RegisterForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkillMatchApplication"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        WindowStyle="SingleBorderWindow"
        Title="RegisterForm" Height="850" Width="500">
    <Grid Background="#FFEFECE3" Height="850">
        <Label Content="Create your account." HorizontalAlignment="Center" Margin="0,76,0,0" VerticalAlignment="Top" Background="Transparent" Foreground="#FF183765" FontSize="36" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold"/>
        <TextBox x:Name="txtRegisterEmail" HorizontalAlignment="Left" Margin="120,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="304" Height="46" Foreground="#FF183765" FontSize="20"/>
        <PasswordBox HorizontalAlignment="Left" Margin="120,262,0,0" VerticalAlignment="Top" Width="304" Height="46" FontSize="20"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="64,196,0,0" VerticalAlignment="Top" Foreground="#FF183765" FontFamily="Yu Gothic UI" FontSize="16"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="35,269,0,0" VerticalAlignment="Top" Foreground="#FF183765" FontFamily="Yu Gothic UI" FontSize="16"/>
        <Button x:Name="Register" Content="REGISTER" HorizontalAlignment="Left" VerticalAlignment="Top" Width="116" Height="37" Foreground="#FF183765" FontFamily="Yu Gothic UI Semibold" FontSize="14" Margin="308,346,0,0" Background="#FFEFECE3" Click="btnRegister_Click"/>
    </Grid>
</Window>
